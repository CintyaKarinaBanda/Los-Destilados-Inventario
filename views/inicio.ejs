<div class="container mt-5">
    <form action="/iniciarSesion" id="formulario" method="post">
        <div class="card col-md-6 mx-auto">
            <div class="card-header">
                <h1 class="text-center">Bienvenido</h1>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <input class="form-control mb-3" type="text" name="usuario" id="usuario" placeholder="Usuario" required autofocus>
                </div>
                <div class="form-group">
                    <input class="form-control mb-3" type="password" name="password" id="password" placeholder="Contraseña" required>
                </div>
            </div>
            <div class="card-footer d-flex">
                <button class="form-control btn btn-primary" type="submit">Iniciar Sesión</button>
            </div>  
        </div>
    </form>
</div>


