<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>

<div class="container mt-5">
    <form action="/modificarProducto" method="post">
        <div class="card">
            <div class="card-header">
                <h1>Modificar Producto</h1>
            </div>
            <div class="card-body">
                <input type="text" name="id" id="id" value="<%= product.id %>" hidden>
                <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" value="<%= product.nombre %>" autofocus required>
                <input class="form-control mb-3" type="text" name="precio" id="precio" placeholder="Precio" value="<%= product.precio %>" required>
                <input class="form-control mb-3" type="text" name="costo" id="costo" placeholder="Costo" value="<%= product.costo %>" required>
                <input class="form-control mb-3" type="text" name="ganancia" id="ganancia" placeholder="Ganancia" value="<%= product.ganancia %>" required>
            </div>
            <div class="card-footer">
                <button class="form-control btn btn-primary" type="submit">Guardar producto</button>
            </div>
        </div>
    </form>
</div>

