<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>

<div class="container mt-5">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h1 class="fw-bold">Productos</h1>
            <a href="/insertarProducto" class="btn btn-primary text-center">AÃ±adir</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Costo</th>
                            <th>Ganancia</th>
                            <th>Editar/Borrar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% productos.forEach((producto) => { %>
                        <tr>
                            <td><%= producto.nombre %></td>
                            <td><%= producto.precio %></td>
                            <td><%= producto.costo %></td>
                            <td><%= producto.ganancia %></td>
                            <td>
                                <a href="/modificarProducto/<%= producto.id %>">Editar</a>
                                <a href="/borrarProducto/<%= producto.id %>">Borrar</a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">

        </div>
    </div>
</div>

